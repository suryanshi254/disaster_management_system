{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "Enhanced Stryker configuration for Vite + TypeScript + Jest project.",
  "packageManager": "npm",
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  "testRunner": "jest",
  "coverageAnalysis": "off",
  "mutate": [
    "src/**/*.ts"
  ],
  "jest": {
    "projectType": "custom",
    "configFile": "jest.config.cjs"
  },
  "tempDirName": "stryker-tmp",
  "concurrency": 2
}
